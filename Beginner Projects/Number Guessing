import random
import math

lower = int(input("Enter Lower Number:- "))
upper = int(input("Enter Upper Number:- "))

x = random.randint(lower, upper)    # random integer
a = round(math.log(upper - lower + 1,2))    # Chances

print("\n\t\tYou've only ", a, " chances to guess the integer!\n")

count = 0

while count < a:

    count += 1
    guess = int(input("Guess a number:- "))

    if x == guess:
        print("Congratulations you did it in ", count, " try")
        break

    elif x > guess:
        print("You guessed too small!")

    elif x < guess:
        print("You Guessed too high!")

if count >= a:
    print("\n\t\tThe number is %d" % x)
    print("\t\tBetter Luck Next time!")
